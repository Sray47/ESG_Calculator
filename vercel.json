{
  "version": 2,
  "builds": [
    {
      "src": "brsr_backend/server.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x"
      }
    },
    {
      "src": "brsr_frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/brsr_backend/server.js" },
    { "source": "/(.*)", "destination": "/" }
  ]
}