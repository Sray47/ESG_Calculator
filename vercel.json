{
  "version": 2,
  "builds": [
    {
      "src": "brsr_backend/server.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x"
      }
    },
    {
      "src": "brsr_frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "brsr_frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/brsr_backend/server.js"
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000, immutable"
      },
      "dest": "/brsr_frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/brsr_frontend/dist/index.html"
    }
  ]
}