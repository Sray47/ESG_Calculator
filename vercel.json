{
  "version": 2,
  "builds": [
    {
      "src": "brsr_backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["brsr_backend/Roboto-*"],
        "buildCommand": "yum install -y cairo-devel libjpeg-turbo-devel pango-devel giflib-devel pixman-devel || apt-get update && apt-get install -y libcairo2-dev libjpeg-turbo-dev libpango1.0-dev libgif-dev libpixman-1-dev"
      }
    },
    {
      "src": "brsr_frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/brsr_backend/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/brsr_frontend/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/brsr_frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/brsr_frontend/index.html"
    }
  ]
}
